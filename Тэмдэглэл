PHP –¥—ç—ç—Ä –∫–∞—Ç–µ–≥–æ—Ä–∏–Ω—É—É–¥—ã–≥ –∞–≤–∞—Ö –∫–æ–¥:
<?php
// –ë“Ø—Ö –∫–∞—Ç–µ–≥–æ—Ä–∏–Ω—É—É–¥—ã–≥ –∞–≤–∞—Ö
function getCategories($conn) {
    $query = "SELECT id, name, slug, icon FROM categories WHERE is_active = 1 ORDER BY display_order ASC";
    $result = $conn->query($query);
    return $result->fetch_all(MYSQLI_ASSOC);
}

// category.php –¥—ç—ç—Ä –∞—à–∏–≥–ª–∞—Ö —à“Ø“Ø–ª—Ç“Ø“Ø—Ä
if (isset($_GET['cat'])) {
    $slug = $_GET['cat'];
    $query = "SELECT id, name FROM categories WHERE slug = ?";
    $stmt = $conn->prepare($query);
    $stmt->bind_param("s", $slug);
    $stmt->execute();
    $result = $stmt->get_result();
    $category = $result->fetch_assoc();
}
?>

